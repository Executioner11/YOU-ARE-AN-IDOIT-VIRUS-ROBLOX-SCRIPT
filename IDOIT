--// Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

--// Player
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

--// Create Sound
local sound = Instance.new("Sound")
sound.SoundId = "rbxassetid://3200130016"
sound.Volume = 10
sound.Looped = true
sound.Parent = humanoidRootPart
sound:Play()

--// White Screen Overlay (Taller)
local screenGui = Instance.new("ScreenGui")
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local whiteFrame = Instance.new("Frame")
whiteFrame.BackgroundColor3 = Color3.new(1,1,1)
whiteFrame.Size = UDim2.new(1, 0, 1.5, 0)
whiteFrame.Position = UDim2.new(0, 0, -0.25, 0)
whiteFrame.Parent = screenGui

--// "You Are An Idoit" Text (Black)
local titleText = Instance.new("TextLabel")
titleText.Text = "You Are An Idoit"
titleText.Font = Enum.Font.Arcade
titleText.TextScaled = true
titleText.TextColor3 = Color3.new(0, 0, 0)
titleText.BackgroundTransparency = 1
titleText.Size = UDim2.new(1, 0, 0.2, 0)
titleText.Position = UDim2.new(0, 0, 0.05, 0)
titleText.TextStrokeTransparency = 0
titleText.TextStrokeColor3 = Color3.new(1, 1, 1)
titleText.Parent = screenGui

--// ☻ Virus Faces Horizontal Positions
local positions = {
    UDim2.new(0.1, 0, 0.5, 0), -- left-middle
    UDim2.new(0.5, 0, 0.5, 0), -- center-middle
    UDim2.new(0.9, 0, 0.5, 0)  -- right-middle
}

local faces = {}

for _, pos in ipairs(positions) do
    local faceLabel = Instance.new("TextLabel")
    faceLabel.Text = "☺"
    faceLabel.Font = Enum.Font.Cartoon
    faceLabel.TextSize = 3000 -- increased from 1000 → 3000 (3x larger)
    faceLabel.TextColor3 = Color3.new(0,0,0)
    faceLabel.BackgroundTransparency = 1
    faceLabel.Size = UDim2.new(0, 3000, 0, 3000) -- match scale to TextSize
    faceLabel.Position = pos
    faceLabel.AnchorPoint = Vector2.new(0.5,0.5)
    faceLabel.TextScaled = false
    faceLabel.Parent = screenGui

    table.insert(faces, faceLabel)

    local originalPos = faceLabel.Position
    RunService.RenderStepped:Connect(function()
        local offsetX = math.random(-5,5)/100
        local offsetY = math.random(-5,5)/100
        faceLabel.Position = originalPos + UDim2.new(0, offsetX, 0, offsetY)
    end)
end

--// ☻ Faces Flashing Effect
local faceFlashInterval = 0.2
local faceFlashTimer = 0

RunService.RenderStepped:Connect(function(dt)
    faceFlashTimer = faceFlashTimer + dt
    if faceFlashTimer >= faceFlashInterval then
        faceFlashTimer = 0
        for _, face in ipairs(faces) do
            if face.TextColor3 == Color3.new(0,0,0) then
                face.TextColor3 = Color3.new(1,1,1)
            else
                face.TextColor3 = Color3.new(0,0,0)
            end
        end
    end
end)

--// White Screen Flashing (White <-> Black every 1 second)
local screenFlashInterval = 0.2
local screenFlashTimer = 0

RunService.RenderStepped:Connect(function(dt)
    screenFlashTimer = screenFlashTimer + dt
    if screenFlashTimer >= screenFlashInterval then
        screenFlashTimer = 0
        if whiteFrame.BackgroundColor3 == Color3.new(1,1,1) then
            whiteFrame.BackgroundColor3 = Color3.new(0,0,0)
        else
            whiteFrame.BackgroundColor3 = Color3.new(1,1,1)
        end
    end
end)
